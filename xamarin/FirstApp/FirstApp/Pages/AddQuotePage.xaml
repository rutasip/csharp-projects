<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.Pages.AddQuotePage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry Text="{Binding Author}" Placeholder="Author"/>
            <Editor Text="{Binding Quote}" BackgroundColor="Transparent" Placeholder="Quote" HeightRequest="200"/>
            <Button CornerRadius="35" BackgroundColor="Black" TextColor="White" Text="Save" Command="{Binding SaveCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>